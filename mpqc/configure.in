case $target in
  *-cray-unicos*)
    if test ! X$GXX = Xyes; then
      CXXOPTIONS_MISC="$CXXOPTIONS_MISC -h new_for_init"
    fi
    AC_MSG_RESULT(cray)
  ;;
  *)
